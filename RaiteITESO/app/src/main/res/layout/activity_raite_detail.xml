<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_raite_details_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/iteso"
        />

    <TextView
        android:id="@+id/activity_raite_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_raite_details_image"
        android:typeface="sans"
        android:textSize="40dp"
        android:text="Wey del raite"
        />

    <ListView
        android:id="@+id/activity_raite_detail_list"
        android:layout_width="wrap_content"
        android:layout_height="320"
        android:layout_below="@+id/activity_raite_detail_name"
        >

    </ListView>

    <Button
        android:id="@+id/activity_raite_detail_buttom_raite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_raite_detail_list"
        android:typeface="sans"
        android:textSize="20dp"
        android:text="Pedir Raite"
        />

</RelativeLayout>