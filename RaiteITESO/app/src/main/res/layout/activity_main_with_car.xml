<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_with_car_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ofrecer Raite"
        android:layout_centerHorizontal="true"
        android:typeface="sans"
        android:textSize="30dp"
        />
    <Switch
        android:id="@+id/activity_main_with_car_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visible"
        android:typeface="sans"
        android:textSize="20dp"
        android:layout_below="@+id/activity_with_car_message"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:track="@color/colorAccent"
        />

    <ListView
        android:id="@+id/activity_main_with_car_points_interest"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_below="@+id/activity_main_with_car_visible"
        android:layout_marginTop="10dp"
        >
    </ListView>

    <EditText
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/activity_main_with_car_points_interest"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="Â¿Donde nos vemos?"
        />
</RelativeLayout>