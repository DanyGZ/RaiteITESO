<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_item_without_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:typeface="sans"
        android:textSize="20dp"
        android:text="Nombre: "
        />

    <TextView
        android:id="@+id/activity_item_without_car_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/activity_item_without_car_name"
        android:layout_marginTop="15dp"
        android:typeface="sans"
        android:textSize="18dp"
        android:text="12:00"
        />
    <TextView
        android:id="@+id/activity_item_without_car_final_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_item_without_car_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:typeface="sans"
        android:textSize="20dp"
        android:text="Punto Final"
        />
    <ImageView
        android:id="@+id/activity_item_without_car_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/flecha_indicador"
        />




</RelativeLayout>
