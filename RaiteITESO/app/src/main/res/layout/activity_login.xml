<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ride ITESO"
                android:textSize="35sp"
                android:textColor="@color/AzulIteso"/>

            <ImageView
                android:id="@+id/activity_login_logo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/iteso_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#002F55"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:text="Usuario:"/>

            <EditText
                android:id="@+id/activity_login_user"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:singleLine="true"
                android:background="#E0E0E0"
                android:textColor="@color/AzulIteso"
                android:paddingLeft="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/AzulIteso"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:layout_marginLeft="55dp"
                android:cursorVisible="true"
                android:layout_marginTop="30dp"
                android:text="ContraseÃ±a:"/>

            <EditText
                android:id="@+id/activity_login_password"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:password="true"
                android:background="#E0E0E0"
                android:textColor="@color/AzulIteso"
                android:paddingLeft="10dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/activity_login_login"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/black"
                android:background="@color/verdeGoogle"
                android:layout_marginBottom="20dp"
                android:text="Log In"/>

            <Button
                android:id="@+id/activity_login_create"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:background="@color/AzulIteso"
                android:textColor="@android:color/white"
                android:layout_marginBottom="30dp"
                android:text="Sign Up"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>