<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/activity_main_without_car_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/iteso_logo"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/activity_main_without_car_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_below="@+id/activity_main_without_car_image"
        android:layout_marginTop="5dp"
        android:background="#8BC34A"
        android:textColor="@android:color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#002F55"
            android:layout_marginLeft="10dp"
            android:typeface="sans"
            android:textSize="20dp"
            android:text="Irme ahora"
            />


        <Switch
            android:id="@+id/activity_main_without_car_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="120dp"
            android:checked="false" />

    </LinearLayout>

    <ListView
        android:id="@+id/activity_main_without_car_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_without_car_layout1"
        android:dividerHeight="1dp"
        android:layout_marginTop="3dp"
        >
    </ListView>

    <TextView
        android:id="@+id/activity_main_without_car_no_raite"
        android:layout_below="@+id/activity_main_without_car_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:typeface="sans"
        android:textSize="20dp"
        android:text="No hay raites disponibles en estos momentos"/>

</RelativeLayout>